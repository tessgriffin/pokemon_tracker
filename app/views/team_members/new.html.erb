<div class="container team_member_index">
  <div class="row">
    <div class="col l12">
      <h2>Add Pokemon</h2>
    </div>
  </div>
  <div class="row">
    <div class="col l6">
      <label>Species</label>
      <select class="browser-default">
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Bulbasaur</option>
        <option value="2">Ivysaur</option>
        <option value="3">Venusaur</option>
        <option value="4">Charmander</option>
        <option value="5">Charmeleon</option>
        <option value="6">Charizard</option>
      </select>
    </div>
    <div class="col l6">
    <label>Nature</label>
      <select class="browser-default">
        <option value="" disabled selected>Choose your option</option>
        <option value="1">Adamant</option>
        <option value="2">Bold</option>
        <option value="3">Brave</option>
        <option value="4">Calm</option>
        <option value="5">Careful</option>
        <option value="6">Gentle</option>
      </select>
    </div>
  </div>
  <div class="row">
  <h3>Base Stats:</h3>
    <form class="col s12">
      <div class="row">
        <div class="input-field col s2">
          <input id="HP" type="number" class="validate">
          <label for="HP">HP</label>
        </div>
        <div class="input-field col s2">
          <input id="Attack" type="number" class="validate">
          <label for="Attack">Attack</label>
        </div>
        <div class="input-field col s2">
          <input id="Defense" type="number" class="validate">
          <label for="Defense">Defense</label>
        </div>
        <div class="input-field col s2">
          <input id="SP.ATK" type="number" class="validate">
          <label for="SP.ATK">SP.ATK</label>
        </div>
        <div class="input-field col s2">
          <input id="SP.DEF" type="number" class="validate">
          <label for="SP.DEF">SP.DEF</label>
        </div>
        <div class="input-field col s2">
          <input id="Speed" type="number" class="validate">
          <label for="Speed">Speed</label>
        </div>
      </div>
    </form>
  </div>  
  <div class="row">
    <div class="input-field col s2">
      <input id="Level" type="number" class="validate">
      <label for="Level">Level</label>
    </div>
  </div>
  <input type="submit" value="Submit" class="btn grey darken-2">
</div>